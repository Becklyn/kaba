{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "h",
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2016"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitThis": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": false,
        "target": "es2016"
    },
    "exclude": [
        "../node_modules",
        "vendor"
    ]
}
